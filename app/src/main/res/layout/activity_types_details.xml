<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/header"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                style="@style/HeaderBar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@mipmap/header"

                >
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="@string/rest"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal" />
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relativeButton"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/menue"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relativeBack"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:foregroundGravity="right"
                    android:layout_gravity="end"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/imgBack"
                        />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_resturants"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/imgNum"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_below="@id/imgMain"
            android:layout_marginEnd="15dp"
            android:background="@color/textColors"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txtNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="5"
                android:textColor="#ffff"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/images"
                android:textColor="#ffff"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtNum"/>


        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerImgs"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_below="@id/imgMain"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toStartOf="@id/imgNum"
            android:layout_toLeftOf="@id/imgNum" />

        <TextView
            android:id="@+id/txtRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerImgs"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/rest"
            android:textColor="@color/textColors"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColors"
            android:textSize="20sp"
            android:layout_below="@id/txtRest"/>
        <View
            android:id="@+id/lineRest"
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:background="@color/textColors"
            android:layout_below="@id/txtRest"
            android:layout_alignStart="@id/txtRest"
            android:layout_alignLeft="@id/txtRest" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@android:drawable/star_big_on"
            android:layout_below="@id/recyclerImgs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/txtDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/lineRest"
            android:textColor="@color/textColors"
            android:layout_alignStart="@id/txtRest"
            android:layout_alignLeft="@id/txtRest"
            android:layout_marginTop="15dp"
            />

        <View
            android:id="@+id/lineDet"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignLeft="@id/txtRest"
            android:layout_alignStart="@id/txtRest"
            android:layout_below="@id/txtDetails"
            android:layout_marginTop="5dp"
            android:background="#d0d0d0"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offers"
            android:layout_below="@id/lineDet"
            android:textColor="@color/textColors"
            android:textSize="20sp"
            android:layout_alignStart="@id/txtRest"
            android:layout_alignLeft="@id/txtRest"
            android:layout_marginTop="15dp"
            />

        <View
            android:id="@+id/lineOffers"
            android:layout_width="80dp"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@id/txtRest"
            android:layout_alignStart="@id/txtRest"
            android:layout_below="@id/txtOffers"
            android:background="@color/textColors" />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineOffers"
            android:textColor="@color/textColors"
            android:layout_alignStart="@id/txtRest"
            android:layout_alignLeft="@id/txtRest"
            android:layout_marginTop="15dp"
            android:text="01/02/1996"/>
        <ImageView
            android:id="@+id/imgCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/barcode"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txtDate"
            android:layout_marginTop="10dp"/>
                </RelativeLayout>
            </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@mipmap/sidebar"
        app:menu="@menu/navigation_menu"
        app:itemTextAppearance="@style/menu_text_style"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>