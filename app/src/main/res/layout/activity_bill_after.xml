<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BillAfterActivity"
    android:background="@mipmap/bg_bill"
    android:id="@+id/drawer"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                style="@style/HeaderBar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@mipmap/header"

                >
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="@string/bill"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center_horizontal" />
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relativeButton"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/menue"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relativeBack"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:foregroundGravity="right"
                    android:layout_gravity="end"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/imgBack"
                        />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/invoice_after_deduction"
                    android:layout_marginTop="50dp"/>
                <TextView
                    android:id="@+id/txtBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/billBefore"
                    android:textColor="#ffff"
                    android:layout_below="@id/imgBill"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    />
                <RelativeLayout
                    android:id="@+id/relativeBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtBefore"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:padding="7dp"
                    android:background="@drawable/border_bill">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="500$"
                        android:textColor="#ffff"
                        android:editable="false"/>

                </RelativeLayout>
            <TextView
                android:id="@+id/txtAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/billBefore"
                android:textColor="#ffff"
                android:layout_below="@id/relativeBill"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                />
            <RelativeLayout
                android:id="@+id/relativeAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAfter"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:padding="7dp"
                android:background="@drawable/border_bill">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="@string/valueBill"
                    android:text="400$"
                    android:textColor="#ffff"
                    android:editable="false"/>
            </RelativeLayout>

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeAfter"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_bill_txt"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/done"
                    android:textColor="#090909" />
                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeAfter"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_bill_txt"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/no"
                    android:textColor="#090909" />


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@mipmap/sidebar"
        app:menu="@menu/navigation_menu"
        app:itemTextAppearance="@style/menu_text_style"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>